generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model ServiceRoute {
  id              Int            @id @default(autoincrement())
  slug            String         @unique
  isActive        Boolean        @default(true)
  title           String
  tagline         String
  heroImage       String
  distance        String
  duration        String
  basePrice       Int
  description     String
  highlights      Json
  metaTitle       String?
  metaDescription String?
  canonicalUrl    String?
  keywords        String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  gallery         RouteGallery[]
}

model VehiclePackage {
  id          Int    @id @default(autoincrement())
  category    String
  title       String
  image       String
  pricePerKm  Int
  description String
  seats       String
  bags        String
  fuel        String
  features    Json
}

model RouteGallery {
  id       Int          @id @default(autoincrement())
  imageUrl String
  altText  String?
  caption  String?
  routeId  Int
  route    ServiceRoute @relation(fields: [routeId], references: [id], onDelete: Cascade)
}
